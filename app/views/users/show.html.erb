<div class="container px-5 px-sm-0"> 
<%= flash[:notice] %>
<%= flash[:success] %>
  <div class="row">      
    <div class="col-md-3">
      <h2>User info</h2>
  		<%= render 'users/profile', user: @user %>
       <h2>New book</h2>
  		 <%= render 'books/form', book: @newbook %>
    </div>

  
  
 <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
 
 <tr>
  <td>
      <%= link_to user_path(@user) do %>
        <%=attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg'  ,fallback: "no_image.jpg" %> 
        
      <% end %>
  </td> 
  <td>
    <span><%= link_to book.title,book_path(book) %></span>
 </td> 
 <td>
   <span><%= book.body %></span>
   </td>
 </tr>


<% end %>
</tr>
      </tbody>
      </table>
    </div>
  

 
   
