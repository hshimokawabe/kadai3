<div class="container px-5 px-sm-0"> 
<%= flash[:success] %>
  <div class="row">      
    <div class="col-md-3">
      <h2>User info</h2>
  		<%= render 'users/profile', user: @user %>
       <h2>New book</h2>
  		 <%= render 'books/form', book: @newbook %>
    </div>

 <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
 
  <tbody>


  
 

 <tr>
  <td>
      <%= link_to user_path(@user) do %>
        <%=attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg'  ,fallback: "no_image.jpg" %> 
        <%= @user.name %>
      <% end %>
  </td> 
  <td>
    <span><%= link_to @book.title,book_path(@book) %></span>
 </td> 
 <td>
   <span><%= @book.body %></span>
   </td>
   <%- if current_user.id == @user.id %>
 <td><%= link_to 'Edit', edit_book_path(@book) %></td>
  <td>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？？" %>
</td>
<% end %>
   
   
   
 </tr>



</tr>
</tbody>
    </table>
    
   
</div>    